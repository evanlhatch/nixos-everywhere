# config/hetzner.env
# Hetzner Cloud specific default configurations.
# These can be overridden by .env or justfile command-line arguments.

# Default Hetzner server type
HETZNER_DEFAULT_SERVER_TYPE="cpx21"

# Default Hetzner server location
HETZNER_DEFAULT_LOCATION="ash" # Ashburn, VA

# Default base image for the "convert" deployment method
# This is the OS that nixos-everywhere.sh will "infect".
HETZNER_DEFAULT_BASE_IMAGE="debian-12"

# Default SSH Key Name or Fingerprint to use from your Hetzner Cloud project
# This is a fallback if not set in .env. It's highly recommended to set this in .env.
# HETZNER_SSH_KEY_NAME_OR_FINGERPRINT="your_default_hcloud_ssh_key_name"

# Default network configuration
HETZNER_DEFAULT_NETWORK="k3s-net"

# Default volume to attach
HETZNER_DEFAULT_VOLUME="volume-ash-1"

# Default firewall to apply
HETZNER_DEFAULT_FIREWALL="k3s-fw"

# Default placement group
HETZNER_DEFAULT_PLACEMENT_GROUP="k3s-placement-group"

# Default labels (semicolon-separated key=value pairs)
HETZNER_DEFAULT_LABELS="deploy=nixos-everywhere;project=homelab"

# Default IPv4 setting (set to false for IPv6 only)
HETZNER_DEFAULT_ENABLE_IPV4="false"