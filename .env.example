# .env.example
# Copy this file to .env and fill in your actual secrets.
# This file should be gitignored.

# Hetzner Cloud API Token (Required)
# Generate from your Hetzner Cloud Console.
HCLOUD_TOKEN="your_hetzner_api_token_here"

# SSH Key Configuration for Hetzner
# Option 1: Name or Fingerprint of an SSH key already in your Hetzner Cloud project
# This is the primary method used by the scripts.
HETZNER_SSH_KEY_NAME_OR_FINGERPRINT="blade-nixos SSH Key"

# Option 2: Path to a local public SSH key file.
# If HETZNER_SSH_KEY_NAME_OR_FINGERPRINT is not set, the scripts might try to use this.
# However, uploading keys on-the-fly with hcloud server create is complex.
# It's recommended to pre-upload your key to Hetzner and use its name/fingerprint.
# LOCAL_SSH_PUBLIC_KEY_PATH="~/.ssh/id_ed25519.pub"

# Default SSH key content (used in some scripts)
DEFAULT_SSH_KEY="ssh-rsa "

# Default Flake configuration
DEFAULT_FLAKE_LOCATION="github:evanlhatch/k3s-nixos-config"
DEFAULT_FLAKE_ATTRIBUTE="hetznerK3sControlTemplate"

# Infisical Credentials (Optional, if your Flake or setup requires them)
# These are passed to the server via cloud-init for use by nixos-everywhere.sh or your Flake.
INFISICAL_CLIENT_ID=""
INFISICAL_CLIENT_SECRET=""
INFISICAL_BOOTSTRAP_ADDRESS="https://app.infisical.com" # Default Infisical Cloud address

# User for SSHing into the final NixOS system
# Typically 'root' or a user you define in your NixOS configuration.
NIXOS_SSH_USER="root"